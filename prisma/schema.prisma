generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String    @id @default(cuid())
  title     String
  content   String?
  published Boolean   @default(false)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  authorId  String?
  tags      String[]
  comments  Comment[]
  author    User?     @relation(fields: [authorId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  posts     Post[]

  @@map("users")
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  postId    String
  author    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  post      Post     @relation(fields: [postId], references: [id])
  replies   Reply[]
}

model Reply {
  id        String   @id @default(cuid())
  text      String
  author    String?
  commentId String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  comment   Comment  @relation(fields: [commentId], references: [id])
}

model Subject {
  id          String    @id @default(cuid())
  title       String
  description String?
  classes     Class[]
  Teacher     Teacher[]
}

model Class {
  id          String   @id @default(cuid())
  title       String
  students    Int?     @default(0)
  description String?
  startDate   DateTime
  endDate     DateTime
  subjectId   String?
  subject     Subject? @relation(fields: [subjectId], references: [id])
}

model Teacher {
  id          String    @id @default(cuid())
  name        String
  description String?
  subjects    Subject[]
}
