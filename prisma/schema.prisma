generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String?
  published Boolean   @default(false)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  authorId  String?
  tags      String[]
  comments  Comment[]
  author    User?     @relation(fields: [authorId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  posts     Post[]

  @@map("users")
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  postId    Int
  author    String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  post      Post     @relation(fields: [postId], references: [id])
  replies   Reply[]
}

model Reply {
  id        String   @id @default(cuid())
  text      String
  author    String?
  commentId String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  comment   Comment  @relation(fields: [commentId], references: [id])
}

model Subject {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  classes     Class[]
  teachers    Teacher[]
}

model Class {
  id                 Int               @id @default(autoincrement())
  title              String
  students           Int?              @default(0)
  description        String?
  startDate          DateTime
  endDate            DateTime
  subjectId          Int
  subject            Subject           @relation(fields: [subjectId], references: [id])
  RegistrationForm   RegistrationForm? @relation(fields: [registrationFormId], references: [id])
  registrationFormId Int?
}

model Teacher {
  id          String    @id @default(cuid())
  name        String
  description String?
  subjects    Subject[]
}

model RegistrationForm {
  id      Int     @id @default(autoincrement())
  name    String
  contact String
  classes Class[]
}

model ContactForm {
  id      Int     @id @default(autoincrement())
  name    String
  contact String
  subject String?
  content String?
}
